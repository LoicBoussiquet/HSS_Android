<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:nestedScrollingEnabled="true">

    <TextView android:text="@string/liste_streamers" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewTitreActivity" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:id="@+id/txtViewTitle1"
        android:layout_below="@+id/txtViewTitreActivity"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:background="#ffd2cfd3"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Online"
        android:id="@+id/chkBoxOnline1"
        android:layout_below="@+id/txtViewTitle1"
        android:layout_alignParentStart="true"
        android:background="#ffd2cfd3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtViewViewers"
        android:layout_below="@+id/txtViewTitle1"
        android:layout_toEndOf="@+id/chkBoxOnline1"
        android:layout_toRightOf="@+id/chkBoxOnline1"
        android:layout_alignBottom="@+id/chkBoxOnline1"
        android:layout_alignRight="@+id/txtViewTitle1"
        android:background="#ffd2cfd3"
        android:paddingTop="7.5dp"
        android:paddingLeft="15dp" />

</RelativeLayout>
